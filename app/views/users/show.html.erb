
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.tournaments.any? %>
      <h3>Tournaments (<%= @user.tournaments.count %>)</h3>
      <ol class="tournaments">
        <%= render @tournaments %>
      </ol>
      <%= will_paginate @tournaments %>
    <% end %>
  </div>
</div>
